<header  style="display: flex; flex-flow:row nowrap; justify-content:space-between; padding: 10px 20px;background-color:rgba(0, 0, 0, 0.30); align-items:center">
<h3>{{username}}</h3>
<div>
    <a href="/user/logout" style="background-color:rgb(43, 43, 43); color:rgb(255, 255, 255); border-radius: 20px; padding:5px 15px" class="btn mr-3">Logout</a>
    <a href="/chat" style="background-color:rgb(76, 76, 76); color:rgb(255, 255, 255); border-radius: 20px; padding:5px 15px" class="btn mr-3">Chat</a>
    <a href="/cart" style="background-color:rgb(76, 76, 76); color:rgb(255, 255, 255); border-radius: 20px; padding:5px 15px" class="btn mr-3">Cart</a>
    {{#if admin}}
        <a href="/products/add" style="background-color:rgb(76, 76, 76); color:rgb(255, 255, 255); border-radius: 20px; padding:5px 15px" class="btn mr-3">Add Product</a>
    {{/if}}
    <img style="width: 50px; height:50px; border-radius: 50%; object-fit:cover" src="{{userImg}}" alt="">
</div>
</header>
<div style="display: flex; flex-flow:column nowrap; align-items:center;">
    <div style="background-color:rgba(97, 97, 97, 0.107); width:70%; border-radius:10px; margin:20px; padding:15px; display:flex;flex-flow:column; align-items:center">    
        <h2 style="margin-bottom: 10px;">categories</h2>
        <div>
            {{#each categories}}
                <a href="/products/category/{{this}}" style="background-color:rgb(76, 76, 76); color:rgb(255, 255, 255); border-radius: 20px; padding:5px 15px" class="btn mr-3">{{this}}</a>
            {{/each}}
        </div>
    </div>

{{>table}}

</div>