
    <div class="container my-5">
      <div class="jumbotron">
        <h1>LOGIN</h1>
        <br />
        <form class="form" action="/user/login" method="post">
          <div class="form-group">
            <input
              name="username"
              placeholder="Username"
              class="form-control"
              type="text"
              required
            />
          </div>
          <div class="form-group">
            <input
              name="password"
              placeholder="Password"
              class="form-control"
              type="password"
              required
            />
          </div>

          <div class="form-group">
            <input class="btn btn-success my-3" type="submit" value="Login" />
          </div>
        </form>

        <br/>
        <div class="text-center"></div>
        <a class="btn btn-success my-3" href="/user/register" >
          SIGN UP
        </a>
      </div>
    </div>
